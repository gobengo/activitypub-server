{
  "name": "activitypub-server",
  "version": "1.0.0",
  "description": "",
  "main": "./lib/index.js",
  "bin": "./lib/bin.js",
  "type": "module",
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "build": "run-p lint tsc",
    "eslint:fix": "npm run eslint -- --fix",
    "eslint": "npx eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "run-p prettier:fix eslint:fix",
    "lint": "run-p eslint prettier:check",
    "prepare": "npm run build",
    "prettier:check": "npm run prettier -- -c",
    "prettier:fix": "npm run prettier -- -w",
    "prettier": "prettier 'src/**/*.ts'",
    "start": "node --loader ts-node/esm src/index.ts",
    "test": "jest",
    "tsc": "tsc --declaration"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@swc/core": "^1.2.183",
    "@swc/jest": "^0.2.21",
    "@types/node": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@web-std/fetch": "^4.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.15.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.0",
    "jest-ts-webcompat-resolver": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.7.0"
  },
  "dependencies": {
    "yargs": "^17.5.0"
  },
  "jest": {
    "resolver": "jest-ts-webcompat-resolver",
    "rootDir": "./src",
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc/jest"
      ]
    }
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-empty-interface": 0,
      "@typescript-eslint/no-floating-promises": 1,
      "@typescript-eslint/no-misused-promises": 1,
      "@typescript-eslint/no-unused-vars": 0,
      "node/no-missing-import": 0,
      "no-case-declarations": 0,
      "node/shebang": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/no-empty-function": 0,
      "node/no-extraneous-import": [
        "error",
        {
          "allowModules": [
            "@jest/globals"
          ],
          "resolvePaths": [],
          "tryExtensions": []
        }
      ]
    }
  }
}
